<p id="notice"><%= notice %></p>

<h1>Houses2</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Price</th>
      <th>Available</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.title %></td>
        <td><%= house.address %></td>
        <td><%= house.price %></td>
        <td><%= house.available %></td>
        <td><%= house.description %></td>
        <td><%= image_tag house.picture_url(:thumb) if house.picture.present? %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4>http://localhost:3000/users/<%=@current_user.id-%>/houses</h4>



